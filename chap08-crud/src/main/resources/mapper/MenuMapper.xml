<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ohgiraffers.crud.menu.model.dao.MenuMapper">

    <resultMap id="menuResultMap" type="com.ohgiraffers.crud.menu.model.dto.MenuDTO">
        <id property="code" column="menu_code"/>
        <result property="name" column="menu_name"/>
        <result property="price" column="menu_price"/>
        <result property="categoryCode" column="category_code"/>
        <result property="orderableStatus" column="orderable_status"/>
    </resultMap>

    <resultMap id="categoryResultMap" type="com.ohgiraffers.crud.menu.model.dto.CategoryDTO">
        <id property="code" column="category_code" />
        <result property="name" column="category_name" />
        <result property="refCategoryName" column="ref_category_code"/>
    </resultMap>

    <select id="findAllMenu" resultMap="menuResultMap">
        select
            menu_code,
            menu_name,
            menu_price,
            category_code,
            orderable_status
        from
            tbl_menu
        where
            orderable_status = 'Y'
        order by
            menu_code
    </select>

    <select id="findMenuByCode" resultMap="menuResultMap" parameterType="_int">
        select
            menu_code,
            menu_name,
            menu_price,
            category_code,
            orderable_status
        from
            tbl_menu
        where
            orderable_status = 'Y' and
            menu_code = #{code}
        order by
            menu_code
    </select>

    <select id="findAllCategory" resultMap="categoryResultMap">
        select
            category_code,
            category_name,
            ref_category_code
        from
            tbl_category
    </select>

    <!--auto_increment 쓰는거 대신에 useGeneratedKeys="true" 쓰면 알아서 pk로 등록해줌. -->
    <insert id="registMenu" parameterType="com.ohgiraffers.crud.menu.model.dto.MenuDTO"
            useGeneratedKeys="true" keyProperty="code">         <!--MenuDTO에서 pk 역할을 하는 code를 명시 -->

        INSERT INTO
            tbl_menu
        (
            menu_name,
            menu_price,
            category_code,
            orderable_status
        )
        VALUES
            (
                #{name},
                #{price},
                #{categoryCode},
                #{orderableStatus}
            )
    </insert>

    <update id="updateMenu" parameterType="com.ohgiraffers.crud.menu.model.dto.MenuDTO">
        update
            tbl_menu
        set
            menu_name = #{name},
            menu_price = #{price},
            category_code = #{categoryCode},
            orderable_status = #{orderableStatus}
        where
            menu_code = #{code}
    </update>
</mapper>